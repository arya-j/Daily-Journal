<%- include("partials/header.ejs") %>

<div class="home write align-items-center justify-content-center row md-5">
  <form class="home" method="POST" action="/blog">
    <h2 class="mb-5 pb-2" style="font-family: 'Merriweather', serif;">Edit or Delete your Journal here.</h2>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label" style="font-family: 'Open Sans', sans-serif;">Post number</label>
        <input type="text" class="form-control ftext" id="exampleInputEmail1" name="pnum" />
      </div>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label" style="font-family: 'Open Sans', sans-serif;">Heading</label>
      <input type="text" class="form-control ftext" id="exampleInputEmail1" name="htext" />
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label" style="font-family: 'Open Sans', sans-serif;">Describe your day</label>
    </div>
    <div class="input-group mb-4">
      <textarea class="form-control" aria-label="With textarea" name="btext"></textarea>
    </div>
    <button type="submit" class="btn btn-light ftext px-3" name="action" value="edit" style="font-family: 'Open Sans', sans-serif;">Edit</button>
    <button type="submit" class="btn btn-light ftext mx-3 px-3" name="action" value="delete" style="font-family: 'Open Sans', sans-serif;">Delete</button>
  </form>
</div>

